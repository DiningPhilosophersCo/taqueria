{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}/taqueria-vscode-extension"
			],
			"outFiles": [
				"${workspaceFolder}/taqueria-vscode-extension/out/**/*.js"
			],
			"preLaunchTask": "build-and-watch-vscode",
			"env": {
				"LogLevel": "warn",
				"InstallDevPlugins": "false"
			}
		},
		{
			"name": "Run Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${env:HOME}/TVsCE_e2e/vscode-taq-test-project/",
				"--extensionDevelopmentPath=${workspaceFolder}/taqueria-vscode-extension",
				"--extensionTestsPath=${workspaceFolder}/taqueria-vscode-extension/out/test/suite/index",
				"--disable-extensions"
			],
			"outFiles": ["${workspaceFolder}/taqueria-vscode-extension/out/**/*.js"],
			"preLaunchTask": "npm: pretest",
			"env": {
				"LogLevel": "debug"
			}
		},
		{
			"request": "launch",
			"name": "Launch CLI",
			"type": "pwa-node",
			"program": "${workspaceFolder}/index.ts",
			"cwd": "${workspaceFolder}", // If you want to run taq from a different location, set the address in this line
			"runtimeExecutable": "deno",
			"runtimeArgs": [
				"run",
				"--inspect-brk",
				"--allow-run",
				"--allow-write",
				"--allow-read",
				"--allow-env",
				"--allow-net",
				"--import-map",
				"${workspaceFolder}/import_map.json"
			],
			"args": [
				"--quickstart",
				"Dummy text",
				"--setBuild",
				"Dummy-build",
				"--setVersion",
				"Dummy-version",
				"uninstall",
				"../../taqueria/taqueria-plugin-flextesa"
			],
			"attachSimplePort": 9229
		}
	]
}
